@model InventarioAplicativo.Models.ViewModels.LoginModel

<div class="text-center">
    <h1 class="display-4">Bem-Vindo ao seu inventário!</h1>
    <div class="text-danger" asp-validation-summary="All">
    </div>
    <div class="">
        <form asp-action="Login" asp-controller="Account" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                <input asp-for="Name" class="form-control mb-2" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <div><span asp-validation-for="Password" class="text-danger"></span></div>
                <input asp-for="Password" class="form-control mb-2" />
            </div>
            <button class="btn btn-primary" type="submit">Log In</button>
        </form>
    </div>
</div>
